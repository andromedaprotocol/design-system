{
  "name": "@andromedaprotocol/react",
  "version": "0.2.1",
  "sideEffects": false,
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "nodemon --watch src --exec yarn build -e ts,tsx",
    "build": "concurrently yarn:build:*",
    "test": "jest --env=jsdom --passWithNoTests",
    "lint": "concurrently yarn:lint:*",
    "version": "yarn build",
    "build:esm": "cross-env BABEL_ENV=esm babel src --root-mode upward --extensions .ts,.tsx -d dist/esm --source-maps",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --root-mode upward --extensions .ts,.tsx -d dist/cjs --source-maps",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "test:cov": "yarn test --coverage",
    "lint:src": "eslint src --ext .ts,.tsx --config ../../.eslintrc",
    "lint:types": "tsc --noEmit"
  },
  "devDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@andromedaprotocol/alert": "0.2.7",
    "@andromedaprotocol/avatar": "0.2.7",
    "@andromedaprotocol/badge": "0.2.8",
    "@andromedaprotocol/breadcrumb": "0.2.10",
    "@andromedaprotocol/button": "0.2.7",
    "@andromedaprotocol/checkbox": "0.2.9",
    "@andromedaprotocol/code": "0.2.8",
    "@andromedaprotocol/divider": "0.2.7",
    "@andromedaprotocol/dot": "0.2.6",
    "@andromedaprotocol/forms": "0.3.3",
    "@andromedaprotocol/icon": "0.2.6",
    "@andromedaprotocol/image": "0.2.4",
    "@andromedaprotocol/kbd": "0.2.2",
    "@andromedaprotocol/link": "0.2.2",
    "@andromedaprotocol/message": "0.2.2",
    "@andromedaprotocol/notification": "0.2.2",
    "@andromedaprotocol/radio": "0.2.2",
    "@andromedaprotocol/spinner": "0.2.3",
    "@andromedaprotocol/switch": "0.2.2",
    "@andromedaprotocol/tag": "0.2.2",
    "@andromedaprotocol/theme": "0.4.8",
    "@andromedaprotocol/utils": "^0.2.5"
  },
  "peerDependencies": {
    "react": ">=16.8.6",
    "react-dom": ">=16.8.6"
  }
}
